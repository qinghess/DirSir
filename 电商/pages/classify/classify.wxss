/* pages/classify/classify.wxss */
page{position: relative;}
.header{width:100%;display:flex;text-align: center;white-space: nowrap;overflow-x:scroll;overflow-y: hidden;}
.small_box{text-align: center;word-wrap: wrap;white-space: nowrap;display:block;background-color: #e8f5eb;}
.small_box image{width:110rpx;height:110rpx;margin-left:30rpx;}
.font{position:sticky;top:10rpx;right:0rpx;display:block;width:55rpx;height:110rpx;background-color: #e8f5eb;padding-top: 10rpx;border: solid 1rpx rgb(231, 223, 223);border-top-left-radius: 10px;border-bottom-left-radius: 10px;}
.small_box text{display:block;margin-top:10rpx;}
.s{float: left;background-color: #fff;height:200rpx;text-align: center;}
.s image{display:block;width:110rpx;height:110rpx;margin-left: 30rpx;}
.ss{font-size:18px;position: fixed;top:10rpx;right:20rpx;font-size:24rpx;}
.quan{width:100%;height:50rpx;display:none;}
.quan1{width: 100%;height:50rpx;margin:20rpx 20rpx;font-size: 18px;}
.clear{position: absolute;top: 0;right: 0;}